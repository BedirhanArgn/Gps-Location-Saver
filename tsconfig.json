{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "esModuleInterop": true,
    "lib": [
      "es2020"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "pacts",
    "logs"
  ],
  "extends": "expo/tsconfig.base"
}
